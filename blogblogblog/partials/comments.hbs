<section class="comments-section" id="comments">
    <h3 class="comments-title">Comments</h3>
    
    <!-- Comment Options -->
    <div class="comment-options">
        <button class="comment-option-btn active" data-comment-type="disqus">
            <svg class="icon" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"></path>
            </svg>
            Disqus Comments
        </button>
        <button class="comment-option-btn" data-comment-type="simple">
            <svg class="icon" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                <polyline points="14,2 14,8 20,8"></polyline>
                <line x1="16" y1="13" x2="8" y2="13"></line>
                <line x1="16" y1="17" x2="8" y2="17"></line>
                <polyline points="10,9 9,9 8,9"></polyline>
            </svg>
            Simple Form
        </button>
    </div>
    
    <!-- Disqus Comments -->
    <div class="comment-system disqus-comments active" id="disqus-comments">
        <div class="comment-placeholder">
            <p>Loading Disqus comments...</p>
            <p class="comment-note">If comments don't load, you can also:</p>
            <ul class="comment-alternatives">
                {{#if @custom.show_email}}
                <li><a href="mailto:{{@custom.email_address}}?subject=Comment on: {{title}}">Email me directly</a></li>
                {{/if}}
                {{#if @custom.show_bluesky}}
                <li><a href="{{@custom.bluesky_url}}" target="_blank" rel="noopener">Follow me on Bluesky</a></li>
                {{/if}}
                {{#if @custom.show_twitter}}
                <li><a href="{{@custom.twitter_url}}" target="_blank" rel="noopener">Tweet at me</a></li>
                {{/if}}
                {{#if @custom.show_portfolio}}
                {{#if @custom.portfolio_url}}
                <li><a href="{{@custom.portfolio_url}}" target="_blank" rel="noopener">Visit my portfolio</a></li>
                {{/if}}
                {{/if}}
                {{#if @custom.show_app}}
                {{#if @custom.app_url}}
                <li><a href="{{@custom.app_url}}" target="_blank" rel="noopener">Check out my app</a></li>
                {{/if}}
                {{/if}}
            </ul>
        </div>
        <!-- Disqus will be loaded here via JavaScript -->
        <div id="disqus_thread"></div>
    </div>
    

    
    <!-- Simple Comment Form -->
    <div class="comment-system simple-comments" id="simple-comments">
        <form class="simple-comment-form" id="simple-comment-form">
            <div class="form-group">
                <label for="comment-name">Name:</label>
                <input type="text" id="comment-name" name="name" required>
            </div>
            <div class="form-group">
                <label for="comment-email">Email (optional):</label>
                <input type="email" id="comment-email" name="email">
            </div>
            <div class="form-group">
                <label for="comment-message">Comment:</label>
                <textarea id="comment-message" name="message" rows="4" required></textarea>
            </div>
            <button type="submit" class="comment-submit-btn">
                <svg class="icon" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <line x1="22" y1="2" x2="11" y2="13"></line>
                    <polygon points="22,2 15,22 11,13 2,9"></polygon>
                </svg>
                Post Comment
            </button>
        </form>
        
        <div class="simple-comments-list" id="simple-comments-list">
            <!-- Comments will be loaded here -->
        </div>
    </div>
</section> 