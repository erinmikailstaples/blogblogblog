    <script src="{{asset "js/start-menu.js"}}"></script>
    <script src="{{asset "js/random-post.js"}}"></script>
    <script src="{{asset "js/github-commits.js"}}"></script>
    <script src="{{asset "js/tools-page.js"}}"></script>
    <script src="{{asset "js/guestbook.js"}}"></script>
    <script src="{{asset "js/post-toc.js"}}"></script>
    <script src="{{asset "js/post-interactions.js"}}"></script>
    <script src="{{asset "js/comments.js"}}"></script>
