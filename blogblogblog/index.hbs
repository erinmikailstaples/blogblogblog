{{!< default}}

<section class="post-list">
    {{#foreach posts}}
        <article class="post-card {{post_class}}">
            <h2 class="post-title"><a href="{{url}}">{{title}}</a></h2>
            {{#if excerpt}}
                <p class="post-excerpt">{{excerpt}}</p>
            {{/if}}
        </article>
    {{/foreach}}
</section>
