{
  "name": "blogblogblog",
  "description": "A simple, scalable, wiki-like Ghost theme with a sidebar for author info.",
  "version": "0.1.0",
  "author": {
    "name": "Erin Mikail Staples",
    "pronouns": "she/her/hers",
    "email": "erin@erinmikailstaples.com"
  },
  "keywords": ["ghost-theme", "blog", "minimal", "sidebar", "wiki"],
  "license": "MIT",
  "engines": {
    "ghost": ">=5.0.0"
  },
  "scripts": {
    "commit-info": "node scripts/generate-commit-info.js",
    "prepare": "npm run commit-info"
  },
  "config": {
    "card_assets": true,
    "custom": {
      "github_username": {
        "type": "text",
        "default": "erinmikailstaples",
        "group": "profile"
      },
      "about_image_url": {
        "type": "text",
        "default": "/content/images/about-me.jpg",
        "group": "profile"
      },
      "bluesky_url": {
        "type": "text",
        "default": "https://bsky.app/profile/erinmikail.bsky.social",
        "group": "social"
      },
      "show_bluesky": {
        "type": "boolean",
        "default": true,
        "group": "social"
      },
      "email_address": {
        "type": "text",
        "default": "your@email.com",
        "group": "contact"
      },
      "show_email": {
        "type": "boolean",
        "default": true,
        "group": "contact"
      },
      "current_game": {
        "type": "text",
        "default": "Your current game",
        "group": "fun_facts"
      },
      "current_book": {
        "type": "text",
        "default": "Your current book",
        "group": "fun_facts"
      },
      "current_music": {
        "type": "text",
        "default": "Your current music",
        "group": "fun_facts"
      },
      "current_project": {
        "type": "text",
        "default": "Your current project",
        "group": "fun_facts"
      }
    }
  }
}
