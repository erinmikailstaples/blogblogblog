{
  "name": "blogblogblog-rules",
  "description": "Modern Y2K-coded rules for BlogBlogBlog by Erin Mikail Staples",
  "rules": [
    {
      "pattern": "*.hbs",
      "language": "Handlebars",
      "style": {
        "quotes": "double",
        "indent_size": 2,
        "max_line_length": 100,
        "self_close_tags": true
      },
      "lint": {
        "require_alt_text_on_images": true,
        "require_semantic_headings": true,
        "enforce_heading_hierarchy": true,
        "no_unclosed_tags": true
      }
    },
    {
      "pattern": "*.css",
      "language": "CSS",
      "style": {
        "quotes": "double",
        "indent_size": 2,
        "max_line_length": 100,
        "prefer_hsl_colors": true,
        "prefer_modern_layout": ["flex", "grid"],
        "use_logical_properties": true
      },
      "lint": {
        "no_unused_classes": true,
        "require_clamp_for_responsive_sizing": true,
        "prefer_responsive_units": ["rem", "em", "%"],
        "no_important": true
      }
    },
    {
      "pattern": "*.js",
      "language": "JavaScript",
      "style": {
        "semi": true,
        "quotes": "single",
        "indent_size": 2,
        "max_line_length": 80
      },
      "lint": {
        "prefer_const": true,
        "prefer_arrow_functions": true,
        "disallow_var": true,
        "require_lazy_loading_images": true
      }
    }
  ]
}

@media (prefers-reduced-motion: reduce) {
  .glitch-overlay {
    animation: none;
  }
}

